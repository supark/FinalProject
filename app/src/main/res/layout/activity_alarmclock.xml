<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gsu.httpcs.finalproject.AlarmClockActivity"
    >

    <Button
        android:id="@+id/go_back_from_alarm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/back_normal"
        android:layout_alignParentLeft="true"/>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="-9dp"
        android:foregroundGravity="center"
        android:layout_below="@+id/go_back_from_alarm"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/start_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on Alarm"
        android:textStyle="bold"
        android:textColor="@android:color/holo_purple"
        android:textSize="20sp"
        android:layout_above="@+id/update_txt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp" />

    <Button
        android:id="@+id/end_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn off alarm"
        android:layout_alignBaseline="@+id/start_alarm"
        android:layout_alignBottom="@+id/start_alarm"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/update_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did you set the alarm?"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />



</RelativeLayout>
